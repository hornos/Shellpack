#!/bin/bash

### BEGIN HEADER
. $(dirname ${0})/../lib/header
# load libraries
uselib run
### END HEADER

prg="vasp"
guide="vasp.guide"
while getopts hp:g: opt; do
  case "$opt" in
    p) prg=$OPTARG;;
    g) guide=$OPTARG;;
    h) echo "Usage: $(basename $0) -p program -g guide"; exit 1;;
  esac
done

${spname} "${prg}" "${guide}"
