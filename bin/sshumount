#!/bin/bash
# mcedit TAB: 4 with spaces

### BEGIN HEADER
name=$(basename ${0})
spname="__SP_${name}"
default_kickstart="${HOME}/shellpack/lib/kickstart"
if test -z "${SHELLPACK_KICKSTART}" ; then
  if test -r "${default_kickstart}" ; then
    SHELLPACK_KICKSTART="${default_kickstart}"
  else
    errmsg "No Kickstart"
    exit 10
  fi
fi
# read kickstart
. ${SHELLPACK_KICKSTART}
# load libraries
uselib ssh
### END HEADER


### BEGIN MAIN
force=false
host=${1}

while getopts f o
do
  case "$o" in
	f)	force=true; host=${2};
  esac
done

lock="${host}.mount.${shellpack_lckext}"

if $force ; then
  ${spname} ${host}
  ret=$?
  delete_lock ${lock}
  exit ${ret}
fi

if is_lock "${lock}" ; then
  ${spname} ${host}
  ret=$?
  delete_lock ${lock}
  exit ${ret}
fi

echo "${host} is not mounted"
exit 11

### END MAIN
