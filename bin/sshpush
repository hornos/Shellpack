#!/bin/bash
# hard links: sshpush, sshpop
# mcedit TAB: 4 with spaces

### BEGIN HEADER
name=$(basename ${0})
spname="__SP_${name}"
default_kickstart="${HOME}/shellpack/lib/kickstart"
if test -z "${SHELLPACK_KICKSTART}" ; then
  if test -r "${default_kickstart}" ; then
    SHELLPACK_KICKSTART="${default_kickstart}"
  else
    errmsg "No Kickstart"
    exit 10
  fi
fi
# read kickstart
. ${SHELLPACK_KICKSTART}
# load libraries
uselib ssh
### END HEADER


### BEGIN MAIN
host=${1}
file=${2}
${spname} ${host} ${file}
### END MAIN
